<button {{action "restart"}}>Restart</button>
<p>Score: {{score}}</p>



{{#each grid.elements as |row|}}
  <div class="row">
  {{#each row as |element|}}
    <div class="location{{if element.isSelected " is-selected"}}" onclick={{action "tapped" element}}>
      {{element.value}}
    </div>
  {{/each}}
  </div>
{{/each}}
